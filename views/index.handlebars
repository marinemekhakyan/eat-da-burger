  <div class="container-fluid">
 
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <p>Take a break, eat a virtual burger!</p>
            <p id="error"></p>
            <form>
                <label for="burger_name">Burger Name:</label>
                <input type="text" id="burger_name" name="burger_name">
                <button type="submit" class="btn btn-primary" id="order-button">Order</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-4 menuDiv" id="menu">

            <h1 class="menuTitle">Ready to Devour!</h1>
            {{#each burgers}}
            {{#unless devoured}}
            {{> menu devoured=true}}
            {{/unless}}
            {{/each}}

        </div>
        <div class="col-2"></div>
        <div class="col-4 menuDiv" id="pastMenu">
            <h1 class="menuTitle">Devoured!</h1>
            {{#each burgers}}
            {{#if devoured}}
            {{> menu devoured=false}}
            {{/if}}
            {{/each}}

        </div>
        <div class="col-1"></div>

    </div>
</div>